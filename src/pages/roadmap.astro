---

<Layout title="Roadmap">
  <h2 class="mb-6 text-2xl">Come lend a hand!</h2>
  <div class="grid !grid-cols-[auto_1fr] gap-1">
    {
      items.map(({ completed, name }) => (
        <>
          {completed ? <Checked /> : <Unchecked />}
          {name}
        </>
      ))
    }
  </div>
  <div>
    <h2 class="my-6 text-2xl">Ideas for future projects</h2>
    <ul>
      {futureIdeas.map((idea) => <li class="!text-sm list-inside">{idea}</li>)}
    </ul>
  </div>
  <div>
    <h2 class="my-6 text-2xl">Do you have ideas or feedback for us?</h2>
    <div class="mb-10">
      Email us at
      <a href="mailto:CrystalRidgeKCK@gmail.com">CrystalRidgeKCK@gmail.com</a>
    </div>
  </div>
</Layout>
