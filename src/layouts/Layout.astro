---
import "../styles/hamburgers/my-hamburgers.scss";
import "../styles/pico/custom-pico.scss";
import Footer from "../components/Footer.astro";
import { Header } from "../components/Header";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html data-theme="light" lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title + " | Crystal Ridge"}</title>
  </head>
  <Header client:load />
  <body class="relative text-sm">
    <main class="container pt-10 px-4 pb-0">
      <slot />
    </main>
  </body>
  <Footer />

  <style is:global>
    body {
      min-height: 100vh;
      min-height: 100svh;
      color: #333333;
      background-color: hsl(210deg 20% 98%);
    }

    #logo {
      --logo-width: calc(var(--font-size) * 13);
      width: var(--logo-width);
      min-width: var(--logo-width);
    }
  </style>
</html>
